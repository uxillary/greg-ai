{
  "model": "Tacotron2",
  "max_decoder_steps": 70000,
  "generator_model": "HiFi-GAN",
  "datasets": [
    {
      "formatter": "ljspeech",
      "dataset_name": "",
      "path": "dataset/",
      "meta_file_train": "metadata.csv",
      "ignored_speakers": null,
      "language": "English",
      "lang" : "en",
      "phonemizer": "English",
      "meta_file_val": "metadata_val.csv",
      "eval_split_size": 0.05
    }
  ],
  "audio_config": {
    "sample_rate": 22050,
    "fft_size": 512,
    "win_length": 1024,
    "hop_length": 256,
    "num_mels": 80,
    "mel_fmin": 0,
    "mel_fmax": 8000,
    "max_audio_length": 200000
  },
  "training_config": {
    "epochs": 100,
    "batch_size": 2,
    "gradient_clip": 1.0,
    "learning_rate": 0.001,
    "num_loader_workers": 4,
    "num_eval_loader_workers": 4,
    "checkpoint_interval": 5,
    "eval_interval": 5,
    "use_cuda": true,
    "mixed_precision": true,
    "cudnn_benchmark": true,
    "ga_loss_weight": 1.0,
    "stopnet_loss_weight": 0.5
  },
  "output_config": {
    "output_path": "output/",
    "checkpoint_dir": "output/checkpoints",
    "log_dir": "output/logs"
  }
}
